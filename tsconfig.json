{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2016"],
    "target": "es2016",
    "module": "CommonJS",
    "declaration": true,
    "types": ["reflect-metadata", "jest", "node"],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "@core/*": ["core/*"],
      "@main/*": ["main/*"],
      "@config/*": ["core/config/*"],
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noEmitOnError": true,
    "noEmitHelpers": false,
    "alwaysStrict": true,
  },
  "include": [
    "src/**/*",
    "package.json",
    "LICENSE",
    "README.md",
  ],
  "exclude": ["node_modules", "dist", "stryker-tmp"],
}
